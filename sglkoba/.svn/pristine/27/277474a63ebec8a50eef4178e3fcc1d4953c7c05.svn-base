package maestro.action;import java.io.IOException;import javax.servlet.ServletException;import java.sql.SQLException; import org.apache.struts.action.ActionMessage;  import org.apache.struts.action.ActionMessages; import javax.servlet.http.HttpServletRequest;import javax.servlet.http.HttpServletResponse;import javax.servlet.http.HttpSession;import java.util.*;import maestro.control.*;import maestro.entity.*;import maestro.form.*;import org.apache.struts.action.*;  public final class categoriaAction  extends Action{
			 public ActionForward execute(ActionMapping mapping,	ActionForm form, 			HttpServletRequest request,	HttpServletResponse response)			throws IOException, ServletException {
categoriaForm _form = (categoriaForm)form;  gstcategoria control = new gstcategoria(); String opcion = request.getParameter("opcion");  opcion = opcion==null || ( opcion!=null && opcion.equals("")) ? "crear" : opcion; 
//OPCION DE set:  if(opcion.equals("set")) {  categoria entity = control.getcategoria(request.getParameter("codsx")); categoriaForm  temp  = new categoriaForm();  temp.setopcion("update"); temp.llenar(entity);  request.setAttribute("categoriaForm", temp);  return mapping.findForward("categoria_datos");  }  String mensaje = "";  //opcion de CREAR  if(opcion.equals("crear")) {  String catcodpadre = _form.getcatcodpadre();   String catdescripcion = _form.getcatdescripcion();   String catcodcompania = _form.getcatcodcompania();   String catnombre = _form.getcatnombre();  
  try {  control.crearcategoria(catcodpadre,catdescripcion,catcodcompania,catnombre);  mensaje = "categoria Creado con Exito";    } catch (SQLException e) {   e.printStackTrace();  mensaje = "No se pudo Crear el categoria: <br> " + e.getLocalizedMessage();   }  }  // Opcion de update  if(opcion.equals("update")) {   try {   control.updatecategoria(_form);   mensaje = "categoria Actualizado con Exito";    } catch (SQLException e) { e.printStackTrace();   mensaje = "No se pudo Actualizar el categoria: <br> " + e.getLocalizedMessage();  }  }  // Opcion de eliminar  if(opcion.equals("delete")) { String codsx = request.getParameter("codsx");  try {   control.eliminar(codsx);   mensaje = "categoria Eliminado con Exito";    } catch (SQLException e) { e.printStackTrace();   mensaje = "No se pudo Eliminar el categoria: <br> " + e.getLocalizedMessage();  }  }  ActionMessages e = getErrors(request);  e.add("general", new ActionMessage(mensaje, false)); addErrors(request, e);  return mapping.findForward("categoria");    } }